{
  "compilerOptions": {
    "types": ["@playwright/test", "node"],
    "target": "es2024",
    "lib": ["ES2024", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
